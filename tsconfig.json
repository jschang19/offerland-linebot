{
    "compilerOptions": {
      "target": "es2018",
      "baseUrl": "src/",
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "paths": {
        "@utils/*": ["./utils/*"],
        "@handlers/*": ["./handlers/*"],
        "@MessageTemplate": ["./utils/line/message"]

      },
      "typeRoots": ["./types", "./node_modules/@types"],
      "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules","dist"],
    "allowJs": true,
    "tsc-alias": {
      "resolveFullPaths": true
    }
  }